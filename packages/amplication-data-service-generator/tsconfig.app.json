{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "types": ["node"],
    "emitDecoratorMetadata": true,
    "target": "es2017",
    "declaration": true,
    "removeComments": true,
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "jsx": "react",
    "lib": ["es2020", "dom"]
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "**/**.template.ts",
    "**/**.template.tsx",
    "**/**.template.env",
    "**/static/**/**",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
