{
  "name": "amplication-server",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "check-format": "prettier --check \"**/*.{js,ts,json,gql,md,yaml}\"",
    "format": "prettier --write \"**/*.{js,ts,json,gql,md,yaml}\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "migrate:save": "npx prisma2 migrate save --experimental",
    "migrate:up": "npx prisma2 migrate up --experimental",
    "prisma:studio": "npx prisma2 studio --experimental",
    "prisma:generate": "npx prisma2 generate",
    "prisma:generate:watch": "npx prisma2 generate --watch",
    "lint": "eslint '{src,apps,libs,test}/**/*.ts' --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "start:db": "npm run migrate:up && npm run prisma:generate && npm run seed",
    "seed": "ts-node prisma/seed.ts",
    "postinstall": "npm run prisma:generate",
    "docker:migrate": "docker-compose -f docker-compose.migrate.yml up -d",
    "docker:db": "docker-compose -f docker-compose.db.yml up -d",
    "docker:seed": "docker exec -it nest-api npm run seed",
    "docker": "docker-compose up -d"
  },
  "dependencies": {
    "@nestjs/common": "^7.0.7",
    "@nestjs/config": "^0.4.0",
    "@nestjs/core": "^7.0.7",
    "@nestjs/graphql": "^7.2.1",
    "@nestjs/jwt": "^7.0.0",
    "@nestjs/passport": "^7.0.0",
    "@nestjs/platform-express": "^7.0.7",
    "@nestjs/swagger": "^4.5.1",
    "@prisma/client": "2.0.0-alpha.819",
    "apollo-server-express": "^2.12.0",
    "bcrypt": "4.0.0",
    "class-transformer": "0.2.3",
    "class-validator": "0.11.0",
    "dataloader": "^2.0.0",
    "graphql": "14.6.0",
    "graphql-tools": "4.0.7",
    "nest-winston": "^1.3.1",
    "passport": "0.4.1",
    "passport-jwt": "4.0.0",
    "pg": "^7.18.2",
    "pg-hstore": "^2.3.3",
    "reflect-metadata": "0.1.13",
    "rxjs": "6.5.4",
    "swagger-ui-express": "4.1.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.1.2",
    "@nestjs/testing": "6.11.8",
    "@types/bcrypt": "3.0.0",
    "@types/chance": "1.0.8",
    "@types/express": "4.17.2",
    "@types/jest": "25.1.3",
    "@types/node": "13.7.4",
    "@types/supertest": "2.0.8",
    "@typescript-eslint/eslint-plugin": "2.21.0",
    "@typescript-eslint/parser": "2.21.0",
    "chance": "1.1.4",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-import": "2.20.1",
    "jest": "25.1.0",
    "prettier": "1.19.1",
    "prisma2": "2.0.0-alpha.819",
    "rimraf": "3.0.2",
    "supertest": "4.0.2",
    "ts-jest": "25.2.1",
    "ts-loader": "6.2.1",
    "ts-node": "8.6.2",
    "tsconfig-paths": "3.9.0",
    "typegraphql-prisma": "^0.1.5",
    "typegraphql-prisma-nestjs": "^0.100.501",
    "typescript": "3.7.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
