{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "types": ["node"]
  },
  "exclude": [
    "jest.config.ts",
    "node_modules",
    "**/**.template.ts",
    "**/**.template.tsx",
    "**/**.template.env",
    "**/static/**/**",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],
  "include": ["src"]
}
